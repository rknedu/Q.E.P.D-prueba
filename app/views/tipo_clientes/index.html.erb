<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Tipo Clientes</h1>

  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tipo_clientes.each do |tipo_cliente| %>
        <tr>
          <td><%= tipo_cliente.nombre %></td>
          <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
          <% if usuario_signed_in? %>
              <% if Usuario.last.role_id == 2 %>
                <td><%= link_to 'Ver', tipo_cliente, class: "btn btn-primary" %></td>
                <td><%= link_to 'Editar', edit_tipo_cliente_path(tipo_cliente), class: "btn btn-success" %></td>
                <td><%= link_to 'Eliminar', tipo_cliente, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %></td>
              <% end %>
          <% else %>
            <td><%= link_to 'Ver', tipo_cliente, class: "btn btn-primary" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <% if usuario_signed_in? %>
    <% if Usuario.last.role_id == 2 %>
      <%= link_to 'Nuevo Tipo Cliente', new_tipo_cliente_path, class: "btn btn-info" %>
    <% end %>
  <% end %>
</div>

