<h1>Velatorios</h1>

<table>
  <thead>
    <tr>
      <th>Tramites defuncion</th>
      <th>Asesor a domicilio</th>
      <th>Sala de velatorio</th>
      <th>Cirios</th>
      <th>Portacirios</th>
      <th>Cruz</th>
      <th>Flores en canasto</th>
      <th>Flores cubre urna</th>
      <th>Integer</th>
      <th>Libro de condolencias</th>
      <th>Parroco</th>
      <th>Coro</th>
      <th>Aviso prensa</th>
      <th>Tarjeta agradecimiento</th>
      <th>Cafeteria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @velatorios.each do |velatorio| %>
      <tr>
        <td><%= velatorio.tramites_defuncion %></td>
        <td><%= velatorio.asesor_a_domicilio %></td>
        <td><%= velatorio.sala_de_velatorio %></td>
        <td><%= velatorio.cirios %></td>
        <td><%= velatorio.portacirios %></td>
        <td><%= velatorio.cruz %></td>
        <td><%= velatorio.flores_en_canasto %></td>
        <td><%= velatorio.flores_cubre_urna %></td>
        <td><%= velatorio.integer %></td>
        <td><%= velatorio.libro_de_condolencias %></td>
        <td><%= velatorio.parroco %></td>
        <td><%= velatorio.coro %></td>
        <td><%= velatorio.aviso_prensa %></td>
        <td><%= velatorio.tarjeta_agradecimiento %></td>
        <td><%= velatorio.cafeteria %></td>
        <td><%= link_to 'Show', velatorio %></td>
        <td><%= link_to 'Edit', edit_velatorio_path(velatorio) %></td>
        <td><%= link_to 'Destroy', velatorio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

