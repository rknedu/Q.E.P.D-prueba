<p id="notice"><%= notice %></p>

<h1>Plans</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Codigo</th>
      <th>Precio</th>
      <th>Publication</th>
      <th>Servicio</th>
      <th>Type plan</th>
      <th>Tipo cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.nombre %></td>
        <td><%= plan.codigo %></td>
        <td><%= plan.precio %></td>
        <td><%= plan.publication %></td>
        <td><%= plan.servicio %></td>
        <td><%= plan.type_plan %></td>
        <td><%= plan.tipo_cliente %></td>
        <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
        <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

