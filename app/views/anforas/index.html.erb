<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Anforas</h1>

  <table>
    <thead>
      <tr>
        <th>Anfora y cobre</th>
        <th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
        <th>Anfora cobre</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @anforas.each do |anfora| %>
        <tr>
          <td><%= anfora.anfora_y_cobre %></td>
          <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
          <td><%= anfora.anfora_cobre %></td>
          <% if usuario_signed_in? %>
              <% if Usuario.last.role_id == 2 %>
                <td><%= link_to 'Ver', anfora, class: "btn btn-primary" %></td>
                <td><%= link_to 'Editar', edit_anfora_path(anofora), class: "btn btn-success" %></td>
                <td><%= link_to 'Eliminar', anfora, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %></td>
              <% end %>
          <% else %>
            <td><%= link_to 'Ver', anfora, class: "btn btn-primary" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <% if usuario_signed_in? %>
    <% if Usuario.last.role_id == 2 %>
      <%= link_to 'Nueva Anfora', new_anfora_path, class: "btn btn-info" %>
    <% end %>
  <% end %>
</div>

