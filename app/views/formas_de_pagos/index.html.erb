<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Formas De Pagos</h1>

  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @formas_de_pagos.each do |formas_de_pago| %>
        <tr>
          <td><%= formas_de_pago.nombre %></td>
          <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
          <% if usuario_signed_in? %>
              <% if Usuario.last.role_id == 2 %>
                <td><%= link_to 'Ver', formas_de_pago, class: "btn btn-primary" %></td>
                <td><%= link_to 'Editar', edit_formas_de_pago_path(formas_de_pago), class: "btn btn-success" %></td>
                <td><%= link_to 'Eliminar', formas_de_pago, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %></td>
              <% end %>
          <% else %>
            <td><%= link_to 'Ver', formas_de_pago, class: "btn btn-primary" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <% if usuario_signed_in? %>
    <% if Usuario.last.role_id == 2 %>
      <%= link_to 'Nueva Formas de Pago', new_formas_de_pago_path, class: "btn btn-info" %>
    <% end %>
  <% end %>
</div>

