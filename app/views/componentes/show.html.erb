<div class="container">
	<p id="notice"><%= notice %></p>

	<p>
	  <strong>Nombre:</strong>
	  <%= @componente.nombre %>
	</p>

	<p>
	  <strong>Servicio:</strong>
	  <%= @componente.servicio.nombre %>
	</p>

	<p>
	<strong>Atributos:</strong>
	<br>
	  <% @componente.atributos_componentes.each do |componente_atributos_componentes| %>
        <tr>
          <td><%= componente_atributos_componentes.atributo.nombre %></td>:
          <td><%= componente_atributos_componentes.atributo.valor %></td>
          <br>
        </tr>
      <% end %>
	</p>

	<p>
	<strong>Imagen:</strong>
	<br>
	  <% @componente.images.each do |componente_images| %>
        <tr>
          <td><%= image_tag componente_images.cover.url(:minimum) %></td>:
          <br>
        </tr>
      <% end %>
	</p>
	
	<% if usuario_signed_in? %>
	  <% if Usuario.last.role_id == 2 %>
	    <%= link_to 'Editar', edit_componente_path(@componente), class: "btn btn-default" %>
	  <% end %>
	<% end %>
	<%= link_to 'AtrÃ¡s', :back, class: "btn btn-danger" %>
</div>


