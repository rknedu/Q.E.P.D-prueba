<div class="container">
  <p id="notice"><%= notice %></p>
  

  <% if usuario_signed_in? %>
      <% if Usuario.last.role_id == 2 %>
        <p>
          <strong>Nombre:</strong>
          <%= @quote.nombre %>
        </p>

        <p>
          <strong>Apellidos:</strong>
          <%= @quote.apellidos %>
        </p>

        <p>
          <strong>Rut:</strong>
          <%= @quote.rut %>
        </p>

        <p>
          <strong>Localidad:</strong>
          <%= @quote.localidad %>
        </p>

        <p>
          <strong>Email:</strong>
          <%= @quote.email %>
        </p>

        <p>
          <strong>Telefono (1):</strong>
          <%= @quote.telefonouno %>
        </p>

        <p>
          <strong>Telefono (2):</strong>
          <%= @quote.telefonodos %>
        </p>

        <p>
          <strong>Plan:</strong>
          <%= @quote.plan.nombre %>
        </p>

        <p>
          <strong>Mensaje:</strong>
          <%= @quote.mensaje %>
        </p>

        <%= link_to 'Editar', edit_quote_path(@quote), class: "btn btn-default" %> |
      <% end %>
  <% end %>

  <div>
    <%= image_tag "stylish_portfolio/cotizacion.jpg", class: "img-ubicacion" %>
    <%= image_tag "stylish_portfolio/cotizacion-enviada.png", class: "img-ubicacion" %>
  </div>
  <h1 style="font-style: italic;">Nos contactaremos a la brevedad y enviaremos copia de su solicitud a su correo</h1>
  <br>

  <h2>¿Desea cotizar otro servicio?</h2>

  <%= link_to "Cotizar Funeraria", {controller: "/plans", action: "index", q: Servicio.find(8).id}, class: "btn btn-primary"%>
  <%= link_to "Cotizar Crematorio", {controller: "/plans", action: "index", q: Servicio.find(6).id}, class: "btn btn-success"%>
  <%= link_to "Cotizar Sepultura", {controller: "/plans", action: "index", q: Servicio.find(7).id}, class: "btn btn-warning"%>
  <%= link_to "Cotizar Servicio de Sepultación", {controller: "/plans", action: "index", q: Servicio.find(1).id}, class: "btn btn-info"%>


  <br>
  <br>
  <br>
  <br>
  <br>

  <!-- Trigger the modal with a button -->
  <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#myModal">Llamanos</button>

  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Este es nuesto Número</h4>
        </div>
        <div class="modal-body">
          <p>Funerarias y Cemeterios: +56929132914</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
      
    </div>
  </div>
  

  <% @quote.plan.empresa.sedes.each do |quote_plan| %>
        <tr>
      <%= link_to "Ubicación", {controller: "/sedes", action: "show", id: quote_plan.id} , class: "btn btn-info"%>    
        </tr>
      <% end %>
  <%= link_to 'Atrás', plan_path(@quote.plan.id), class: "btn btn-danger" %>
  <%= link_to 'Inicio', root_path, class: "btn btn-success" %>

  
</div>


